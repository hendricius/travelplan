<%- model_class = Luggage -%>
<div class="page-header">
  <h1><%=t '.title', :default => Luggage %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @luggage.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:quantity) %></dt>
      <dd><pre class="prettyprint"><%= @luggage.quantity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @luggage.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comment) %></dt>
      <dd><pre class="prettyprint"><%= @luggage.comment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:importance) %></dt>
      <dd><pre class="prettyprint"><%= @luggage.importance %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:taken_care_of) %></dt>
      <dd><pre class="prettyprint"><%= @luggage.taken_care_of %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:taken_care_of_by_id) %></dt>
      <dd><pre class="prettyprint"><%= @luggage.taken_care_of_by_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              luggages_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_luggage_path(@luggage), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              luggage_path(@luggage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

