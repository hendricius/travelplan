<%= form_for @luggage, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :quantity, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :price, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comment, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :comment, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :importance, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :importance, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :taken_care_of, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :taken_care_of, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :taken_care_of_by_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :taken_care_of_by_id, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  luggages_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
